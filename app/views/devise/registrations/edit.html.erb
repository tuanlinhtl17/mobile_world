<!--start-breadcrumbs-->
<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li><%= link_to "Home", root_path %></li>
        <li class="active"><%= t(".title", resource: resource_name.to_s.humanize) %></li>
      </ol>
    </div>
  </div>
</div>
<!--end-breadcrumbs-->
<div class="register">
  <div class="container">
    <div class="register-top heading">
      <h2><%= t(".title", resource: resource_name.to_s.humanize) %></h2>
    </div>
    <div class="register-main">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="col-md-6 account-left">
        <% if resource.provider.nil? %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></div>
          <% end %>

          <div class="field">
            <%= f.label :password %> <i>(<%= t(".leave_blank_if_you_don_t_want_to_change_it") %>)</i><br />
            <%= f.password_field :password, autocomplete: "off" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= t("devise.shared.minimum_password_length", count: @minimum_password_length) %></em>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :address %><br />
          <%= f.text_area :address, autofocus: true, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :phone_number %><br />
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "off" %>
        </div>
      </div>
      <div class="col-md-6 account-left account-right">
        <h3><%= t "devise.user.edit.title" %></h3>
        <p><%= t "devise.user.edit.paragraph" %></p>
      </div>

      <div class="clearfix"></div>
      <div class="address submit">
        <%= f.submit t ".update" %>
        <%= link_to t("devise.shared.links.back"), :back %>
      </div>
    <% end %>
    </div>
  </div>
</div>
